{
	"compilerOptions": {
		"module": "esnext",
		"target": "ES2015",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"baseUrl": "./src",
		"paths": {
			"types/*": ["types/*"],
			"@lib/*": ["lib/*"],
			"utils/*": ["utils/*"],
			"config/*": ["config/*"],
			"locale/*": ["locale/*"],
			"context/*": ["context/*"],
			"@hooks/*": ["hooks/*"],
			"components/*": ["components/*"],
			"styles/*": ["styles/*"],
			"@public/*": ["../public/*"],
			"@types/*": ["../public/*"],
			"@locales/*": ["../locales/*"],
			"@dynamicContent/*": ["lib/dynamic-content-utils/*"],
			"@contexts/*": ["contexts/*"],
			"@root/*": ["../*"]
		}
	},
	"include": [
		"src",
		"src/components.tsx",
		"next-env.d.ts",
		"globals.d.ts",
		"**/**/*.ts",
		"**/**/*.tsx",
		"src/**/*",
		"src/pages/docs/[id]/pages/[pageId]",
		"locales"
	],
	"exclude": ["node_modules", "**/*.ignore.*", "scripts", "temp"]
}
